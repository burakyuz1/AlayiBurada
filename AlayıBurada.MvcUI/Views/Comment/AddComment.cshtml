@model AlayıBurada.Entities.Models.Comment
@{
    ViewBag.Title = "AddComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col mt-4">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">BİR YORUM EKLE</h3>


            </div>
            <div class="card-body">
                @using (Html.BeginForm("AddComment", "Comment", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="inputName">Başlık</label>
                        @Html.TextBoxFor(m => m.CommentTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CommentTitle)

                    </div>
                    <div class="form-group">
                        <label for="inputDescription">Açıklama</label>
                        @Html.TextAreaFor(m => m.CommentDescription, new { @class = "form-control", rows = "4" })
                        @Html.ValidationMessageFor(m => m.CommentDescription)
                    </div>
                    <input type="hidden" value="@ViewBag.productId" name="ProductID" />

                    <input type="submit" value="Ekle" class="btn btn-success btn-lg" />
                }
            </div>

        </div>

    </div>

</div>


