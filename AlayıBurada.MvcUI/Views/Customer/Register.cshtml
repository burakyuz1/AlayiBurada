@model AlayıBurada.Entities.Models.Customer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Register</title>
</head>
<body>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                    @using (Html.BeginForm("Register", "Customer", FormMethod.Post))
                                    {
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(x => x.CustomerUserName, new { @class = "form-control form-control-lg", placeholder = "User Name" })


                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control form-control-lg", placeholder = "Name and Surname" })

                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(x => x.CustomerEmail, new { @class = "form-control form-control-lg", placeholder = "Email",type="email" })

                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class=" flex-fill mb-0">
                                                @Html.TextBoxFor(x => x.CustomerPassword, new { @class = "form-control form-control-lg", placeholder = "Enter a password" ,type="password"})
                                               

                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center m-3">
                                            <div class=" col-md-5 ml-3 mb-0">
                                                @Html.TextBoxFor(x => x.Address.AddressCity, new { @class = "form-control form-control-lg", placeholder = "City" })

                                            </div>
                                            <div class=" col-md-2 mb-0">

                                            </div>
                                            <div class="col-md-5 mb-0">
                                                @Html.TextBoxFor(x => x.Address.AddressDisctrict, new { @class = "form-control form-control-lg", placeholder = "District" })

                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <div class=" flex-fill mb-0">
                                                @Html.TextBoxFor(x => x.Address.AddressDescription, new { @class = "form-control form-control-lg", placeholder = "Address" })

                                            </div>
                                        </div>
                                        @Html.HiddenFor(x=>x.Address.AddressStatus)

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png" class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
