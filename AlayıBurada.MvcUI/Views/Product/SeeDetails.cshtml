@model AlayıBurada.MvcUI.ViewModel.CommentProductViewModel
@{
    ViewBag.Title = "SeeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="container-fliud">
        <div class="wrapper row">
            <div class="preview col-md-6">

                <div class="preview-pic tab-content">
                    <div class="tab-pane active" id="pic-1"><img src="https://picsum.photos/400/252" /></div>
                    <div class="tab-pane" id="pic-2"><img src="https://picsum.photos/400/252" /></div>
                    <div class="tab-pane" id="pic-3"><img src="https://picsum.photos/400/252" /></div>
                    <div class="tab-pane" id="pic-4"><img src="https://picsum.photos/400/252" /></div>
                    <div class="tab-pane" id="pic-5"><img src="https://picsum.photos/400/252" /></div>
                </div>
                <ul class="preview-thumbnail nav nav-tabs">
                    <li class="active">
                        <a data-target="#pic-1" data-toggle="tab">
                            <img src="https://picsum.photos/200/126" />
                        </a>
                    </li>
                    <li><a data-target="#pic-2" data-toggle="tab"><img src="https://picsum.photos/200/126" /></a></li>
                    <li><a data-target="#pic-3" data-toggle="tab"><img src="https://picsum.photos/200/126" /></a></li>
                    <li><a data-target="#pic-4" data-toggle="tab"><img src="https://picsum.photos/200/126" /></a></li>
                    <li><a data-target="#pic-5" data-toggle="tab"><img src="https://picsum.photos/200/126" /></a></li>
                </ul>

            </div>
            <div class="details col-md-6">
                <h3 class="product-title">@Model.Product.ProductName</h3>
                <div class="rating">

                    <span class="review-no">Ürün Yorum Sayısı: <strong>@ViewBag.commentCount</strong></span>
                </div>
                <p class="product-description">
                    @Model.Product.ProductDescription
                </p>
                <h4 class="price">FİYAT: <span>@Model.Product.ProductPrice₺</span></h4>

                <a>@Ajax.ActionLink("Sepete Ekle", "AddToCart", "Product", new { id = Model.Product.ProductId }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "cartList" }, new { @class = "btn btn-success" }) </a>
                <table class="table mt-2">
                    <thead>
                        <tr>
                            <th>Yorumu Yapan Kişi</th>
                            <th>Yorum Başlığı</th>
                            <th>Yorum Açıklaması</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comment in Model.Comments)
                        {
                            <tr>
                                <td>@comment.Customer.CustomerName</td>
                                <td>@comment.CommentTitle</td>
                                <td>@comment.CommentDescription</td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Comment/AddComment/@Model.Product.ProductId/" class="btn btn-info">Yorum Ekle</a>
            </div>

        </div>
    </div>
</div>
